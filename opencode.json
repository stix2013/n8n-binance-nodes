{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "README.md",
    "AGENTS.md",
    "docs/technical-instruction.md",
    "docs/n8n-custom-node-kimi.md"
  ],
  "mcp": {
    "n8n": {
      "type": "local",
      "command": ["bunx", "n8n-mcp"],
      "environment": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_API_URL": "{env:N8N_API_URL}",
        "N8N_API_KEY": "{env:N8N_API_KEY}",
        "WEBHOOK_SECURITY_MODE": "moderate"
      },
      "enabled": true
    }
  },
  "agent": {
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "gemini-3-flash-preview",
      "tools": {
        "write": false,
        "edit": false
      },
      "prompt": "{file:./.opencode/prompts/code-reviewer.md}"
    }
  }
}
