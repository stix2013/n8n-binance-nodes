{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "n8n": {
      "type": "local",
      "command": [
        "bunx",
        "n8n-mcp"
      ],
      "environment": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_API_URL": "{env:N8N_API_URL}",
        "N8N_API_KEY": "{env:N8N_API_KEY}",
        "WEBHOOK_SECURITY_MODE": "moderate"
      },
      "enabled": true
    }
  }
}
